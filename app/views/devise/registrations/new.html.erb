<h2>Signup</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :first_name %><br />
  <%= f.text_field :first_name, :autofocus => true, autocomplete: 'off' %></div>

  <div><%= f.label :last_name %><br />
  <%= f.text_field :last_name, autocomplete: 'off' %></div>

  <div><%= f.label :company %><br />
  <%= f.text_field :company, autocomplete: 'off' %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autocomplete: 'off' %></div>

  <div><%= f.label :password, 'Password (at least 8 characters)' %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div class='space-one'></div>
  <div><%= f.submit "Sign up" %></div>
  <div class='space-one'></div>
<% end %>

<%= render "devise/shared/links" %>
