<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name, 'Your name' %><br />
  <%= f.text_field :name, :autofocus => true, autocomplete: 'off' %></div>

  <%= f.fields_for :owned_account do |builder| %>
    <div><%= builder.label :name, 'Company or organization' %><br />
    <%= builder.text_field :name, autocomplete: 'off' %></div>
  <% end %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autocomplete: 'off'  %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
